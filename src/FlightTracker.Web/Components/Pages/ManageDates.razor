@page "/manage-dates"
@rendermode InteractiveServer
@using FlightTracker.Core.Entities
@using FlightTracker.Core.Interfaces
@using FlightTracker.Core.Services
@inject ITargetDateRepository TargetDateRepository
@inject AirportCacheService AirportCacheService
@inject NavigationManager Navigation

<PageTitle>Manage Travel Dates</PageTitle>

<h1>‚úàÔ∏è Manage Travel Dates</h1>

<div class="row mb-4">
    <div class="col">
        <button class="btn btn-primary" @onclick="ShowAddForm">
            <i class="bi bi-plus-circle"></i> Add New Date
        </button>
        
        <button class="btn btn-outline-secondary ms-2" @onclick="ShowDeletedDates">
            <i class="bi bi-trash"></i> View Deleted (@deletedCount)
        </button>
    </div>
</div>

@if (showAddForm)
{
    <div class="card mb-4 border-primary">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">@(editingDate == null ? "Add" : "Edit") Travel Date</h5>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <label class="form-label fw-bold">Name</label>
                <input type="text" @bind="newDate.Name" class="form-control" 
                       placeholder="e.g., Easter Weekend" />
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">Outbound Date</label>
                    <input type="date" class="form-control" 
                           value="@newDate.OutboundDate.ToString("yyyy-MM-dd")"
                           min="@DateTime.Today.ToString("yyyy-MM-dd")"
                           max="@DateTime.Today.AddYears(2).ToString("yyyy-MM-dd")"
                           required
                           @onchange="OnOutboundDateChange" />
                    @if (!string.IsNullOrEmpty(outboundDateError))
                    {
                        <small class="text-danger">@outboundDateError</small>
                    }
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">Return Date</label>
                    <input type="date" class="form-control" 
                           value="@newDate.ReturnDate.ToString("yyyy-MM-dd")"
                           min="@DateTime.Today.ToString("yyyy-MM-dd")"
                           max="@DateTime.Today.AddYears(2).ToString("yyyy-MM-dd")"
                           required
                           @onchange="OnReturnDateChange" />
                    @if (!string.IsNullOrEmpty(returnDateError))
                    {
                        <small class="text-danger">@returnDateError</small>
                    }
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Destinations</label>
                
                <div class="autocomplete-wrapper position-relative">
                    <input type="text" 
                           class="form-control" 
                           placeholder="üîç Type to search airports (e.g., Berlin, PMI, Mallorca)..."
                           value="@searchQuery"
                           @oninput="OnSearchInput"
                           @onfocusin="OnSearchFocusIn"
                           @ref="searchInputRef" />
                    
                    @if (showDropdown && filteredAirports.Any())
                    {
                        <div class="autocomplete-dropdown" @onmousedown:preventDefault>
                            @foreach (var airport in filteredAirports)
                            {
                                <div class="autocomplete-item" @onclick="() => SelectAirport(airport)">
                                    <strong>@airport.AirportCode</strong> - @airport.Name
                                </div>
                            }
                            
                            @if (filteredAirports.Count >= 10)
                            {
                                <div class="autocomplete-hint">
                                    <small class="text-muted">Type more to refine search...</small>
                                </div>
                            }
                        </div>
                    }
                    
                    @if (!string.IsNullOrWhiteSpace(searchQuery) && !filteredAirports.Any())
                    {
                        <div class="autocomplete-dropdown">
                            <div class="autocomplete-hint">
                                <small class="text-muted">No airports found. Try searching by code (PMI) or name (Mallorca)</small>
                            </div>
                        </div>
                    }
                </div>

                @if (selectedDestinations.Any())
                {
                    <div class="destination-chips mt-2">
                        <small class="text-muted me-2">Selected (@selectedDestinations.Count):</small>
                        @foreach (var dest in selectedDestinations)
                        {
                            <span class="badge bg-primary">
                                @dest.AirportCode - @dest.Name
                                <button type="button" class="btn-close-chip" @onclick="() => RemoveDestination(dest.Id)">√ó</button>
                            </span>
                        }
                    </div>
                }
                else
                {
                    <small class="text-danger d-block mt-2">
                        <i class="bi bi-exclamation-triangle"></i> Please select at least one destination
                    </small>
                }
            </div>

            @if (!string.IsNullOrEmpty(validationMessage))
            {
                <div class="alert alert-warning">
                    @validationMessage
                </div>
            }

            <div class="d-flex gap-2">
                <button type="button" class="btn btn-success" @onclick="SaveDate">
                    <i class="bi bi-check-circle"></i> Save
                </button>
                <button type="button" class="btn btn-secondary" @onclick="CancelEdit">
                    Cancel
                </button>
            </div>
        </div>
    </div>
}

<div class="row">
    @if (showDeleted)
    {
        <div class="col-12">
            <h3>üóëÔ∏è Deleted Travel Dates</h3>
            @if (deletedDates.Any())
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> These dates are hidden from tracking. Restore to resume price checks.
                </div>
                
                @foreach (var date in deletedDates)
                {
                    <div class="card mb-2 border-danger">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="card-title mb-1">@date.Name</h5>
                                    <div>
                                        <small class="text-muted">
                                            @date.OutboundDate.ToString("yyyy-MM-dd") ‚Üí @date.ReturnDate.ToString("yyyy-MM-dd")
                                            (@((date.ReturnDate - date.OutboundDate).Days) days)
                                        </small>
                                    </div>
                                    <div>
                                        <small class="text-danger">
                                            <i class="bi bi-trash"></i> Deleted: @date.DeletedAt?.ToString("yyyy-MM-dd HH:mm")
                                        </small>
                                    </div>
                                </div>
                                <button class="btn btn-sm btn-success" @onclick="() => RestoreDate(date.Id)">
                                    <i class="bi bi-arrow-counterclockwise"></i> Restore
                                </button>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-muted">No deleted dates.</p>
            }
            
            <button class="btn btn-secondary mt-3" @onclick="() => { showDeleted = false; StateHasChanged(); }">
                <i class="bi bi-arrow-left"></i> Back to Active Dates
            </button>
        </div>
    }
    else
    {
        <div class="col-12">
            <h3>üìÖ Active Travel Dates</h3>
            
            @if (activeDates.Any())
            {
                @foreach (var date in activeDates)
                {
                    var destinations = dateDestinations.ContainsKey(date.Id) 
                        ? dateDestinations[date.Id] 
                        : new List<Destination>();

                    <div class="card mb-2">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="card-title mb-1">@date.Name</h5>
                                    <div>
                                        <small class="text-muted">
                                            @date.OutboundDate.ToString("yyyy-MM-dd") ‚Üí @date.ReturnDate.ToString("yyyy-MM-dd")
                                            (@((date.ReturnDate - date.OutboundDate).Days) days)
                                        </small>
                                    </div>
                                    @if (destinations.Any())
                                    {
                                        <div class="mt-1">
                                            <small class="text-primary">
                                                ‚úàÔ∏è @string.Join(" ‚Ä¢ ", destinations.Select(d => d.AirportCode))
                                            </small>
                                        </div>
                                    }
                                </div>
                                <div class="d-flex gap-2">
                                    <button class="btn btn-sm btn-outline-primary" 
                                            @onclick="() => EditDate(date)">
                                        <i class="bi bi-pencil"></i> Edit
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger" 
                                            @onclick="() => DeleteDate(date.Id)">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle"></i> No active travel dates. Add one to start tracking prices!
                </div>
            }
        </div>
    }
</div>

