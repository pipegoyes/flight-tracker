@code {
    private List<TargetDate> activeDates = new();
    private List<TargetDate> deletedDates = new();
    private Dictionary<int, List<Destination>> dateDestinations = new();
    private int deletedCount = 0;
    
    private bool showAddForm = false;
    private bool showDeleted = false;
    private TargetDate? editingDate = null;
    private string validationMessage = string.Empty;
    private string outboundDateError = string.Empty;
    private string returnDateError = string.Empty;
    
    private TargetDateModel newDate = new();
    
    // Autocomplete
    private List<Destination> selectedDestinations = new();
    private List<Destination> filteredAirports = new();
    private string searchQuery = "";
    private bool showDropdown = false;
    private ElementReference searchInputRef;
    
    // Debouncing
    private System.Threading.Timer? _debounceTimer;
    private const int DebounceDelayMs = 300;

    protected override async Task OnInitializedAsync()
    {
        await LoadDates();
    }

    private async Task LoadDates()
    {
        activeDates = (await TargetDateRepository.GetAllAsync()).OrderBy(d => d.OutboundDate).ToList();
        deletedDates = (await TargetDateRepository.GetDeletedAsync()).ToList();
        deletedCount = deletedDates.Count;

        // Load destinations for each active date
        dateDestinations.Clear();
        foreach (var date in activeDates)
        {
            var destinations = await TargetDateRepository.GetDestinationsAsync(date.Id);
            dateDestinations[date.Id] = destinations.ToList();
        }

        StateHasChanged();
    }

    private void ShowAddForm()
    {
        editingDate = null;
        newDate = new TargetDateModel
        {
            OutboundDate = DateTime.Today.AddMonths(1),
            ReturnDate = DateTime.Today.AddMonths(1).AddDays(3)
        };
        selectedDestinations.Clear();
        searchQuery = "";
        filteredAirports.Clear();
        showDropdown = false;
        validationMessage = string.Empty;
        outboundDateError = string.Empty;
        returnDateError = string.Empty;
        showAddForm = true;
    }

    private async Task EditDate(TargetDate date)
    {
        editingDate = date;
        newDate = new TargetDateModel
        {
            Name = date.Name,
            OutboundDate = date.OutboundDate,
            ReturnDate = date.ReturnDate
        };
        
        // Load current destinations
        var destinations = await TargetDateRepository.GetDestinationsAsync(date.Id);
        selectedDestinations = destinations.ToList();
        
        searchQuery = "";
        filteredAirports.Clear();
        showDropdown = false;
        validationMessage = string.Empty;
        outboundDateError = string.Empty;
        returnDateError = string.Empty;
        showAddForm = true;
    }

    private void CancelEdit()
    {
        showAddForm = false;
        editingDate = null;
        selectedDestinations.Clear();
        searchQuery = "";
        filteredAirports.Clear();
        showDropdown = false;
        validationMessage = string.Empty;
        outboundDateError = string.Empty;
        returnDateError = string.Empty;
    }

    private async Task SaveDate()
    {
        validationMessage = string.Empty;

        // Validation
        if (string.IsNullOrWhiteSpace(newDate.Name))
        {
            validationMessage = "Please enter a name for this date range.";
            return;
        }

        if (newDate.ReturnDate <= newDate.OutboundDate)
        {
            validationMessage = "Return date must be after outbound date.";
            return;
        }

        if (!selectedDestinations.Any())
        {
            validationMessage = "Please select at least one destination.";
            return;
        }

        try
        {
            if (editingDate == null)
            {
                // Create new
                var targetDate = new TargetDate
                {
                    Name = newDate.Name,
                    OutboundDate = newDate.OutboundDate,
                    ReturnDate = newDate.ReturnDate
                };

                var created = await TargetDateRepository.CreateTargetDateAsync(targetDate);
                
                // Associate destinations
                await TargetDateRepository.UpdateDestinationsAsync(
                    created.Id, 
                    selectedDestinations.Select(d => d.Id));
            }
            else
            {
                // Update existing
                editingDate.Name = newDate.Name;
                editingDate.OutboundDate = newDate.OutboundDate;
                editingDate.ReturnDate = newDate.ReturnDate;

                await TargetDateRepository.UpdateTargetDateAsync(editingDate);
                
                // Update destinations
                await TargetDateRepository.UpdateDestinationsAsync(
                    editingDate.Id, 
                    selectedDestinations.Select(d => d.Id));
            }

            showAddForm = false;
            editingDate = null;
            selectedDestinations.Clear();
            await LoadDates();
        }
        catch (Exception ex)
        {
            validationMessage = $"Error saving date: {ex.Message}";
        }
    }

    private async Task DeleteDate(int id)
    {
        if (await TargetDateRepository.SoftDeleteAsync(id))
        {
            await LoadDates();
        }
    }

    private async Task RestoreDate(int id)
    {
        if (await TargetDateRepository.RestoreAsync(id))
        {
            await LoadDates();
            showDeleted = false;
        }
    }

    private void ShowDeletedDates()
    {
        showDeleted = true;
    }

    // Date change handlers with safe parsing
    private void OnOutboundDateChange(ChangeEventArgs e)
    {
        outboundDateError = string.Empty;
        var value = e.Value?.ToString();
        
        if (string.IsNullOrWhiteSpace(value))
        {
            outboundDateError = "Outbound date is required";
            return;
        }
        
        if (DateTime.TryParse(value, out var date))
        {
            if (date < DateTime.Today)
            {
                outboundDateError = "Outbound date cannot be in the past";
                return;
            }
            
            if (date > DateTime.Today.AddYears(2))
            {
                outboundDateError = "Outbound date cannot be more than 2 years in the future";
                return;
            }
            
            newDate.OutboundDate = date;
        }
        else
        {
            outboundDateError = "Invalid date format";
        }
    }

    private void OnReturnDateChange(ChangeEventArgs e)
    {
        returnDateError = string.Empty;
        var value = e.Value?.ToString();
        
        if (string.IsNullOrWhiteSpace(value))
        {
            returnDateError = "Return date is required";
            return;
        }
        
        if (DateTime.TryParse(value, out var date))
        {
            if (date < DateTime.Today)
            {
                returnDateError = "Return date cannot be in the past";
                return;
            }
            
            if (date > DateTime.Today.AddYears(2))
            {
                returnDateError = "Return date cannot be more than 2 years in the future";
                return;
            }
            
            if (date <= newDate.OutboundDate)
            {
                returnDateError = "Return date must be after outbound date";
                return;
            }
            
            newDate.ReturnDate = date;
        }
        else
        {
            returnDateError = "Invalid date format";
        }
    }

    // Autocomplete methods
    private void OnSearchFocusIn()
    {
        if (!string.IsNullOrWhiteSpace(searchQuery))
        {
            showDropdown = true;
        }
    }

    private void OnSearchInput(ChangeEventArgs e)
    {
        searchQuery = e.Value?.ToString() ?? "";
        DebouncedSearch();
    }

    private void DebouncedSearch()
    {
        _debounceTimer?.Dispose();
        _debounceTimer = new System.Threading.Timer(async _ =>
        {
            await InvokeAsync(async () =>
            {
                await PerformSearch();
                StateHasChanged();
            });
        }, null, DebounceDelayMs, Timeout.Infinite);
    }

    private async Task PerformSearch()
    {
        if (string.IsNullOrWhiteSpace(searchQuery))
        {
            filteredAirports.Clear();
            showDropdown = false;
            return;
        }

        if (searchQuery.Length < 2)
        {
            showDropdown = false;
            return;
        }

        // Search using cached service
        var results = await AirportCacheService.SearchDestinationsAsync(searchQuery, maxResults: 10);
        
        // Filter out already selected
        filteredAirports = results
            .Where(a => !selectedDestinations.Any(s => s.Id == a.Id))
            .ToList();
        
        showDropdown = true;
    }

    private void SelectAirport(Destination airport)
    {
        if (!selectedDestinations.Any(d => d.Id == airport.Id))
        {
            selectedDestinations.Add(airport);
        }
        
        searchQuery = "";
        filteredAirports.Clear();
        showDropdown = false;
        StateHasChanged();
    }

    private void RemoveDestination(int destId)
    {
        selectedDestinations.RemoveAll(d => d.Id == destId);
        StateHasChanged();
    }

    public void Dispose()
    {
        _debounceTimer?.Dispose();
    }

    // Model for form binding
    private class TargetDateModel
    {
        public string Name { get; set; } = string.Empty;
        public DateTime OutboundDate { get; set; }
        public DateTime ReturnDate { get; set; }
    }
}
